doctype html
html
  head
    meta (charset="utf-8")
    meta (http-equiv="X-UA-Compatible" content="IE=edge")
    meta (name="viewport" content="width=device-width, initial-scale=1")
    title Secret Pasteboard
    =stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    =csrf_meta_tags
body
  .container
    .header
      form#pastie-query
        ul.nav.nav-pills.pull-right
          li.form-group
            button#new-pastie.btn.btn-success (role="button") New Pastie
          li.form-group
            p &nbsp;
          li.form-group
            input#pastie-token.form-control (type="text" placeholder="Find pastie" length="10")
          li.form-group
            button.btn.btn-primary (type="submit") Go
      h3 Secret Pastie

    .jumbotron
      ==yield

    .footer
      p Copyrights Reserved &copy; #{Date.current.strftime '%Y'}

  =javascript_include_tag 'application', 'data-turbolinks-track' => true

